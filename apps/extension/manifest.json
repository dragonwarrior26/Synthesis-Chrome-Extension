{
    "manifest_version": 3,
    "name": "Synthesis - Intelligent Tab Manager",
    "description": "Organize tabs, extract content, and sync your research with AI-powered synthesis.",
    "version": "1.0.1",
    "icons": {
        "128": "icon-128.png"
    },
    "permissions": [
        "sidePanel",
        "tabs",
        "storage",
        "identity"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Open Synthesis"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.ts"
            ],
            "run_at": "document_idle"
        }
    ]
}